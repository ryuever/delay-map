{
  "version": "2.0.10",
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,

    "target": "es6",
    "outDir": "lib",
    "sourceMap": false,
    "declaration": true,
    "removeComments": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "lib",
    ".build"
  ],
}
